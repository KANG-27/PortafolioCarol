		padding: 0% 2%;
	}
	.container {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.toggle-checkbox {
		display: none;
	}
	.content {
		display: flex;
		flex-direction: column;
		gap: 5px;
		cursor: pointer;
	}
	.line {
		background-color: #6a64f6;
		border-radius: 5px;
		width: 30px;
		height: 3px;
	}

	.toggle-checkbox:checked ~ .content > .line-one {
		animation: lineAnimationOne 0.5s forwards;
	}
	.toggle-checkbox:checked ~ .content > .line-two {
		animation: lineAnimationTwo 0.5s forwards;
	}
	.toggle-checkbox:checked ~ .content > .line-three {
		animation: lineAnimationThree 0.5s forwards;
	}

	/* revert */
	.toggle-checkbox:not(:checked) ~ .content-animation-revert > .line-one {
		animation: lineAnimationOneRevert 0.5s forwards;
	}
	.toggle-checkbox:not(:checked) ~ .content-animation-revert > .line-two {
		animation: lineAnimationTwoRevert 0.5s forwards;
	}
	.toggle-checkbox:not(:checked) ~ .content-animation-revert > .line-three {
		animation: lineAnimationThreeRevert 0.5s forwards;
	}

	@keyframes lineAnimationOne {
		0% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(8.5px);
		}
		100% {
			transform: translateY(8.5px) rotate(45deg);
		}
	}

	@keyframes lineAnimationTwo {
		0% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(0.5);
			opacity: 0.5;
		}
		100% {
			transform: scale(0);
			opacity: 0;
		}
	}

	@keyframes lineAnimationThree {
		0% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-8.5px);
		}
		100% {
			transform: translateY(-8.5px) rotate(-45deg);
		}
	}

	@keyframes lineAnimationOneRevert {
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(8.5px);
		}
		0% {
			transform: translateY(8.5px) rotate(45deg);
		}
	}

	@keyframes lineAnimationTwoRevert {
		100% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(0.5);
			opacity: 0.5;
		}
		0% {
			transform: scale(0);
			opacity: 0;
		}
	}
	@keyframes lineAnimationThreeRevert {
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-8.5px);
		}
		0% {
			transform: translateY(-8.5px) rotate(-45deg);
		}
	}

	.navbar-content-animation-open {
		animation: modal-servis-animation-open 0.5s forwards;
	}

	.navbar-content-animation-close {
		animation: modal-servis-animation-close 0.5s forwards;
	}
	@keyframes modal-servis-animation-close {
		0% {
			height: max-content;
			opacity: 1;
		}
		100% {
			height: 0%;
			opacity: 0;
		}
	}
	@keyframes modal-servis-animation-open {
		0% {
			height: 0%;
			opacity: 0;
		}
		100% {
			height: max-content;
			opacity: 1;
		}
	}
</style>
