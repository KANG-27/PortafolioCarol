<script>
	let checkbox = document.getElementById("toggle-animation");
	let select = document.getElementById("toggle-content");
	let navbar = document.getElementById("navbar-content");

	if (checkbox) {
		checkbox.addEventListener("change", function () {
			console.log(checkbox.checked);
			if (checkbox.checked) {
				// Realizar acciones si el checkbox está marcado
				console.log("El checkbox está marcado.");
				select.classList.add("content-animation-revert");
				navbar.classList.remove("navbar-content-animation-close");
				navbar.classList.add("navbar-content-animation-open");
				document.getElementsByClassName("navbar-content")[0].style.visibility ="visible";
			} else {
				// Realizar acciones si el checkbox no está marcado
				setTimeout(
					function () {
						document.getElementsByClassName("navbar-content")[0].style.visibility ="hidden";
					},
					[500],
				);
				setTimeout(
					function () {
						select.classList.remove("content-animation-revert");
						navbar.classList.remove(
							"navbar-content-animation-open",
						);
						navbar.classList.add("navbar-content-animation-close");
					},
					[400],
				);
				console.log("El checkbox no está marcado.");
			}
		});
	}
</script>

<style>
	a{
